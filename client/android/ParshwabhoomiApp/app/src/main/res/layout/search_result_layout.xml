<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:paddingBottom="2dp"
	/>
    <TextView android:id="@+id/tagline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:textColor="#555555"
        android:paddingBottom="2dp"
	/>
    <TextView android:id="@+id/snippet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayLink"
        android:layout_alignParentLeft="true"
        android:textColor="#cbcbcb"
        />
    <TextView android:id="@+id/businessCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/provider"
        android:layout_alignParentLeft="true"
        android:textColor="#787878"
        />
    <TextView android:id="@+id/type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snippet"
        android:layout_alignParentLeft="true"
        android:textColor="#787878"
        />
    <TextView android:id="@+id/provider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:layout_alignParentLeft="true"
        android:textColor="#787878"
        />
    <TextView android:id="@+id/displayLink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tagline"
        android:layout_alignParentLeft="true"
        android:textColor="#555555"
        android:paddingBottom="2dp"
	/>
</RelativeLayout>
